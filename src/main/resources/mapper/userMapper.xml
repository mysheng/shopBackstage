<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mysheng.office.mapper.UserMapper">
    <select id="queryUsers" resultType="com.mysheng.office.model.User">
        SELECT * FROM user
    </select>
    <select id="queryUserById" resultType="com.mysheng.office.model.User">
        SELECT * FROM user WHERE user_id=#{userId}
    </select>
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId" keyColumn="user_id" parameterType="com.mysheng.office.model.User">
        INSERT INTO user(user_name,password,phone,head_image,remark,create_time,id_card,card_image,update_time) VALUES
        (#{userName},#{password},#{phone},#{headImage},#{remark},#{createTime},#{idCard},#{cardImage},#{updateTime})
    </insert>
    <update id="updateUser" parameterType="com.mysheng.office.model.User">
        UPDATE user
        <set>
            <if test="userName!=null">user_name=#{userName},</if>
            <if test="password!=null">password=#{password},</if>
            <if test="phone!=null">phone=#{phone},</if>
            <if test="remark!=null">remark=#{remark},</if>
            <if test="headImage!=null">head_image=#{headImage},</if>
            <if test="vipStatus!=null">vip_status=#{vipStatus}</if>
        </set>

        WHERE user_id=#{userId}
    </update>
    <select id="selectOldPassword" resultType="String" >
        SELECT password FROM user WHERE user_id=#{userId}
    </select>
    <select id="selectPassword" resultType="String" >
        SELECT password FROM user WHERE phone=#{phone}
    </select>
    <update id="updateUserPassword">
        UPDATE user SET password=#{userPassword} WHERE user_id=#{userId}
    </update>
    <delete id="deleteUser" >
        DELETE FROM user WHERE user_id=#{userId}
    </delete>

    <select id="queryList" parameterType="com.mysheng.office.model.User" resultType="com.mysheng.office.model.User">
        select * FROM user WHERE phone=#{phone}

    </select>
</mapper>